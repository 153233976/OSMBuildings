{
  "shaders": {
    "interaction": {
      "attributes": ["aPosition", "aColor"],
      "uniforms": ["uMatrix"],
      "frameBuffer": true
    },
    "depth": {
      "attributes": ["aPosition"],
      "uniforms": ["uMatrix"],
      "frameBuffer": true
    },
    "basemap": {
      "attributes": ["aPosition", "aTexCoord"],
      "uniforms": ["uMatrix", "uTileImage"]
    },
    "buildings": {
      "attributes": ["aPosition", "aColor", "aNormal"],
      "uniforms": ["uNormalTransform", "uMatrix", "uAlpha", "uLightColor", "uLightDirection"]
    }
  },

"lib": [
    "lib/earcut.js",
    "node_modules/color/dist/Color.debug.js"
  ],

  "src": [
    "src/OSMBuildings.js",
    "src/Map.js",
    "src/Events.js",

    "src/State.js",

    "src/variables.js",
    "src/Request.js",
    "src/util.js",
    "src/shaders.js",
    "src/Triangulate.js",

    "src/data/DataGrid.js",
    "src/data/DataTile.js",

    "src/data/TileGrid.js",
    "src/data/MapTile.js",

    "src/data/Data.js",
    "src/data/Mesh.js",

    "src/formats/GeoJSON.js",
    "src/formats/OBJ.js",

    "src/geometry.js",
    "src/GL.js",
    "src/Scene.js",
    "src/Matrix.js",

    "src/layers/Depth.js",
    "src/layers/Interaction.js",
    "src/layers/Basemap.js",
    "src/layers/Buildings.js",

    "src/gl/Shader.js",
    "src/gl/FrameBuffer.js",
    "src/gl/Texture.js"
  ]
}
