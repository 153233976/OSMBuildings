{
  "shaders": {
    "interaction": {
      "attributes": ["aPosition", "aColor", "aHidden"],
      "uniforms": ["uMatrix"],
      "framebuffer": true
    },
    "depth": {
      "attributes": ["aPosition", "aHidden"],
      "uniforms": ["uMatrix"],
      "framebuffer": true
    },
    "textured": {
      "attributes": ["aPosition", "aTexCoord"],
      "uniforms": ["uMatrix", "uTileImage"]
    },
    "buildings": {
      "attributes": ["aPosition", "aColor", "aNormal", "aHidden"],
      "uniforms": ["uMatrix", "uNormalTransform", "uAlpha", "uLightColor", "uLightDirection"]
    }
  },

"lib": [
    "lib/earcut.js",
    "node_modules/color/dist/Color.debug.js"
  ],

  "src": [
    "src/OSMBuildingsGL.js",
    "src/Map.js",
    "src/Events.js",

    "src/State.js",

    "src/variables.js",
    "src/Request.js",
    "src/util.js",
    "src/shaders.js",
    "src/Triangulate.js",

    "src/data/DataGrid.js",
    "src/data/DataTile.js",

    "src/data/TileGrid.js",
    "src/data/MapTile.js",

    "src/data/Data.js",
    "src/data/Mesh.js",
    "src/data/GeoJSONMesh.js",
    "src/data/OBJMesh.js",

    "src/formats/GeoJSON.js",
    "src/formats/OBJ.js",

    "src/geometry/geometry.js",
    "src/geometry/Matrix.js",
    "src/geometry/Vector.js",
    "src/geometry/Plane.js",

    "src/gl/index.js",
    "src/gl/View.js",
    "src/gl/Buffer.js",
    "src/gl/Framebuffer.js",
    "src/gl/Texture.js",
    "src/gl/Shader.js",

    "src/Renderer.js",

    "src/layers/Depth.js",
    "src/layers/Interaction.js",
    "src/layers/SkyDome.js",
    "src/layers/Basemap.js",
    "src/layers/Buildings.js"
  ]
}
